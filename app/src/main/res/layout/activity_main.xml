<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/editText"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Meadows App Portfolio"
        android:theme="@style/Base.TextAppearance.AppCompat.Title" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layoutgrid"
        android:layout_below="@+id/editText">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="#ff43ff46"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_margin="3dp"
            android:onClick="displayMessage"
            android:layout_column="0" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="#ff43ff46"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Scores_App"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="8"
            android:layout_margin="3dp"
            android:onClick="displayMessage"
            android:layout_columnSpan="5" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="#ff43ff46"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:onClick="displayMessage"
            android:layout_column="0" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="#ff43ff46"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:onClick="displayMessage"
            android:layout_column="12" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="#ff43ff46"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/button5"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="displayMessage"
            android:layout_margin="3dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Capstone"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="12"
            android:background="#ffff2c26"
            android:layout_margin="3dp"
            android:onClick="displayMessage"
            android:textColor="#ffffffff" />

    </GridLayout>

</RelativeLayout>
